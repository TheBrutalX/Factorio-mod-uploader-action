// tsconfig.json
{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@actions/*": ["./actions/*"],
      "@errors/*": ["./errors/*"],
      "@interfaces/*": ["./interfaces/*"],
      "@services/*": ["./services/*"],
      "@types/*": ["./types/*"],
      "@utils/*": ["./utils/*"],
      "@constants": ["./constants"]
    }
  },
  "include": ["src"],
  "ts-node": {
    "esm": true
  }
}